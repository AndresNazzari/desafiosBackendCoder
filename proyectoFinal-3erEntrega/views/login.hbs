<div class='container my-5'>
    <div class='jumbotron'>
        <h1>LOGIN</h1>
        <br />
        <form class='form' action='/login' method='post' role='form' autocomplete='off'>
            <div class='form-group'>
                Email
                <input id='username' name='username' placeholder='Email' class='form-control' type='email' required />
                {{! para que passport lo tome, el email si o si tiene que ser username }}
            </div>

            <div class='form-group'>
                Password
                <input
                    id='password'
                    name='password'
                    placeholder='Password'
                    class='form-control'
                    type='password'
                    required
                />
            </div>

            <div class='form-group'>
                <input class='btn btn-success my-3' type='submit' value='Login' />
            </div>
        </form>
        <hr />
        <div class='text-left'>
            <button class='btn btn-success my-3' onclick="location.href = '/register'">Ir a Register</button>
        </div>
    </div>
</div>